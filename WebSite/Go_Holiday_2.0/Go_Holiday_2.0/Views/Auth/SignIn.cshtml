@model Go_Holiday_2._0.Models.ModelsView.Forms.UserSignIn

@{
    ViewData["Title"] = "Connexion";
}



<div class="login-dark" style="background: #475d62 url('/data/images/star-sky.jpg');">
    <form asp-action="SignIn" style="width:500px;max-width:500px;">
        <div class="illustration">
            <img src="~/data/images/logo_big.png" style="width:200px;">
            <h1 style="color:rgba(205,205,205,0.37);">Go Holiday</h1>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Email" class="form-control" type="email" name="Email" required="" value="dark.evengyl@gmail.com" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control" type="password" name="Password" value="legends" required="" placeholder="Mot de passe">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">Log In</button>
        </div>

        <a href="#" class="forgot">Vous avez perdu votre mot de passe ou votre email ?</a>
    </form>
</div>